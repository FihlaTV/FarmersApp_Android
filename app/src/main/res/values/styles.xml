<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aqua</item>
        <item name="colorPrimaryDark">@color/project_background_dark</item>
        <item name="colorAccent">@color/text_white</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/light_blue</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="TestTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_grey</item>
        <item name="android:textColorSecondary">@color/text_grey</item>

    </style>


    <style name="TutorialActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LoginSignUpActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="WhiteRegularText">
        <item name="android:textColor">@color/white</item>
        <item name="customFont">regular</item>
    </style>

    <style name="WhiteMainRegularText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="WhiteNormalRegularText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="WhiteSmallRegularText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="WhiteTinyRegularText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="WhiteBoldText">
        <item name="android:textColor">@color/white</item>
        <item name="customFont">bold</item>
    </style>

    <style name="WhiteMainBoldText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="WhiteNormalBoldText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="WhiteSmallBoldText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="WhiteTinyBoldText" parent="WhiteRegularText">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="TextPriceInList">
        <item name="customFont">roboto_light</item>
        <item name="android:textSize">@dimen/add_price_edit_text_text_size</item>
        <item name="android:textColor">@color/price_dark_grey</item>
        <item name="android:textColorHint">@color/text_light_grey</item>
    </style>

    <style name="BlueMainRegularText">
        <item name="android:textColor">@color/text_light_blue</item>
        <item name="customFont">regular</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="DarkGreyMainRegularText">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="customFont">regular</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="LightGreyMainRegularText">
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="customFont">regular</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="BlackMainRegularText">
        <item name="android:textColor">@color/text_black</item>
        <item name="customFont">regular</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>




    <style name="ButtonAqua" parent="ButtonSignScreens">
        <item name="android:layout_width">@dimen/login_btn_register_width</item>
        <item name="android:layout_height">@dimen/login_btn_register_height</item>
        <item name="android:background">@drawable/btn_register</item>
        <item name="android:paddingBottom">@dimen/login_btn_register_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/login_btn_register_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/login_btn_register_padding_left_right</item>
        <item name="android:paddingRight">@dimen/login_btn_register_padding_left_right</item>
        <item name="android:layout_marginRight">@dimen/login_small_padding_margin</item>
    </style>

    <style name="TV_Tutorial_Title" parent="WhiteRegularText">
    </style>

    <style name="TV_Tutorial_Content" parent="TV_Tutorial_Title">
        <item name="android:textSize">@dimen/tutorial_content_text_size</item>
    </style>
    <style name="TV_Tutorial_Next" parent="TV_Tutorial_Title">
        <item name="android:textSize">@dimen/tutorial_next_text_size</item>
    </style>

    <style name="ButtonSignScreens" parent="WhiteMainBoldText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_btn_login_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditLoginScreen" parent="WhiteMainRegularText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">@dimen/login_edit_text_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="EditSignUpScreen" parent="WhiteMainRegularText">
        <item name="android:layout_height">@dimen/sign_up_edit_text_height</item>
        <item name="android:paddingRight">@dimen/sign_up_edit_text_margin_padding</item>
        <item name="android:paddingLeft">@dimen/sign_up_edit_text_margin_padding</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/hint_login_color</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/hint_login_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="TV_Drawer">
        <item name="android:textColor">@color/drawer_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="TV_TABS">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="TV_SearchHintListItem">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/search_hint_list_item_text_size</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>
    <style name="TV_Small_CropsItem">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextPickMarketer" parent="WhiteMainRegularText">
        <item name="android:layout_marginLeft">@dimen/select_marketeer_small_margin</item>
        <item name="android:layout_marginRight">@dimen/select_marketeer_small_margin</item>
    </style>

    <style name="EditTextAddPrice" parent="TextPriceInList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/add_price_edit_text_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LogoMarketer" parent="WhiteMainRegularText">
        <item name="android:layout_width">@dimen/add_price_icon_marketer_size</item>
        <item name="android:layout_height">@dimen/add_price_icon_marketer_size</item>
        <item name="android:background">@drawable/bg_blue_circle</item>
        <item name="android:gravity">center</item>
    </style>

</resources>


