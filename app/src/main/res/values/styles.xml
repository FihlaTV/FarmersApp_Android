<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aqua</item>
        <item name="colorPrimaryDark">@color/project_background_dark</item>
        <item name="colorAccent">@color/text_white</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>

    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/light_blue</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="TestTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_grey</item>
        <item name="android:textColorSecondary">@color/text_grey</item>

    </style>


    <style name="TutorialActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LoginSignUpActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TV_Tutorial_Title">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tutorial_title_text_size</item>
    </style>

    <style name="TV_Tutorial_Content" parent="TV_Tutorial_Title">
        <item name="android:textSize">@dimen/tutorial_content_text_size</item>
    </style>
    <style name="TV_Tutorial_Next" parent="TV_Tutorial_Title">
        <item name="android:textSize">@dimen/tutorial_next_text_size</item>
    </style>

    <style name="TextLoginScreen">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditLoginScreen">
        <item name="android:textColorHint">@color/text_white</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/login_edit_text_height</item>
    </style>

    <style name="EditSignUpScreen">
        <item name="android:textColorHint">@color/hint_login_color</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/hint_login_color</item>
        <item name="android:layout_height">@dimen/sign_up_edit_text_height</item>
    </style>

    <style name="TV_Drawer">
        <item name="android:textColor">@color/drawer_text_color</item>
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
    </style>

    <style name="TV_TABS">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tabs_text_size</item>
    </style>

    <style name="TV_SearchHintListItem">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/search_hint_list_item_text_size</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>
    <style name="TV_Small_CropsItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/crop_item_text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>


