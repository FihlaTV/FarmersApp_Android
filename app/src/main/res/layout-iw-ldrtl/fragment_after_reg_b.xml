<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/login_fragment_padding"
    android:background="@drawable/bg_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/login_fragment_padding"
        android:textSize="@dimen/select_marketeer_text_size"
        android:textColor="@color/white"
        android:text="@string/select_marketeer_text_name"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_marketeer_name_height"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/white"
        android:gravity="right|center_vertical"
        android:background="@null"
        android:id="@+id/etMarketeer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_divider_height"
        android:layout_marginBottom="@dimen/select_marketeer_small_margin"
        android:background="@color/aqua"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="31 / 50"
        android:textSize="@dimen/select_marketeer_text_size"
        android:textColor="@color/white"
        android:id="@+id/tvCounter"
        android:layout_marginBottom="@dimen/select_marketeer_small_margin"
        android:gravity="left" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lvListMarketeers" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/after_sign_margin_start_skip"
        android:id="@+id/llStart"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/login_btn_register_width"
                android:layout_height="@dimen/login_btn_register_height"
                android:text="@string/after_sign_skip"
                android:id="@+id/tvSkip"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_register"
                android:paddingBottom="@dimen/login_btn_register_padding_top_bottom"
                android:paddingTop="@dimen/login_btn_register_padding_top_bottom"
                android:paddingLeft="@dimen/login_btn_register_padding_left_right"
                android:paddingRight="@dimen/login_btn_register_padding_left_right" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="@string/after_sign_propose_skip"
                android:id="@+id/textView9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>