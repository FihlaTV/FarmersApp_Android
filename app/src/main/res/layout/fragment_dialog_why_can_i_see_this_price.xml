<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_fr_dialog_rounded">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/aqua_blue"
            android:src="@drawable/message_4_message_3_message_5"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="166dp" />

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_dialgog_crops_calendar"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_default_tiny">

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:id="@+id/tv_DayCropsItem_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="-8dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="27sp"
                custom:customFont="avenir"/>

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:id="@+id/tv_MonthCropsCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="אוקטובר"
                android:textColor="@color/white"
                android:textSize="8.2sp"
                custom:customFont="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="@dimen/padding_margin_default_tiny"
                android:layout_marginRight="@dimen/padding_margin_default_tiny"
                android:layout_marginBottom="2dp"
                android:background="@color/white"/>

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:id="@+id/tv_YearCropsItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/crops_card_calendar_margin_right"
                android:layout_marginRight="@dimen/crops_card_calendar_margin_right"
                android:text="2015"
                android:textColor="@color/white"
                android:textSize="6.8sp"
                custom:customFont="bold"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/crops_card_footer_height"
            android:layout_marginLeft="@dimen/crops_card_fav_cb_margin_small"
            android:layout_marginRight="@dimen/crops_card_fav_cb_margin_small"
            >


            <com.farmers.underground.ui.custom_views.CustomTextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_TitCropsNameCropItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="שיתוף מחירי משווקים"
                style="@style/BlackMainRegularText"/>

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:layout_marginBottom="@dimen/margin_default_medium"
                android:id="@+id/tv_SubCropsNameCropItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:lines="2"
                android:text="ככל שתשתף את מחירי המשווק שלך ברמה היומית כך תיחשף ליותר מחירי משווקים שאחרים שיתפו!"
                style="@style/LightGreyMainRegularText"
                android:textSize="@dimen/normal_text_size"/>
            <View
                android:layout_marginRight="@dimen/margin_default_medium"
                android:layout_marginLeft="@dimen/margin_default_medium"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <com.farmers.underground.ui.custom_views.CustomTextView
                    android:drawableLeft="@drawable/rectangle_220"
                    android:drawablePadding="4dp"
                    android:id="@+id/tvAddPrice_WhyDiag"
                    android:text="עדכן מחיר"
                    android:textColor="@color/aqua"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.farmers.underground.ui.custom_views.CustomTextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tvCancel_WhyDiag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BlackMainRegularText"
                    android:textSize="@dimen/normal_text_size"
                    android:text="ביטול"/>


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>