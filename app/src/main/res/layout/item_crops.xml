<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        custom:cardCornerRadius="@dimen/crops_card_corner_radius"
        custom:cardElevation="4dp"
        custom:cardPreventCornerOverlap="false"
        android:layout_margin="8dp"
        android:id="@+id/crops_item_view">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                >
            <com.joooonho.SelectableRoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_CropsItemImage"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    custom:sriv_left_top_corner_radius="@dimen/crops_card_corner_radius"
                    custom:sriv_right_top_corner_radius="@dimen/crops_card_corner_radius"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_FavouriteCropsItem"
                    android:button="@drawable/selector_crops_fav_checkbox"
                    android:layout_gravity="left|top"
                    android:layout_margin="@dimen/crops_item_fav_cb_margin"
                    android:background="@color/opaque"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:padding="4dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_crops_calendar">
                <com.farmers.underground.ui.custom_views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:id="@+id/tv_DayCropsItem"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        custom:customFont="avenir"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:id="@+id/tv_MonthCropsCalendar"
                        android:layout_gravity="center_horizontal"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white"
                        android:layout_margin="4dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="New Text"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/tv_YearCropsItem"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginRight="@dimen/crops_item_fav_cb_margin_small"
                    android:layout_marginLeft="@dimen/crops_item_fav_cb_margin_small"
                    android:layout_marginBottom="@dimen/crops_item_fav_cb_margin"
                    android:layout_marginTop="@dimen/crops_item_fav_cb_margin_small">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="עגבניות שרי תמר"
                        android:id="@+id/tv_CropsNameCropItem"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="@dimen/crop_item_title_size"/>
                <LinearLayout
                        android:id="@+id/ll_PricesContainer_CropItem"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_below="@+id/tv_CropsNameCropItem"
                        android:layout_above="@+id/tv_PriceDate_CropItem">
                    <include layout="@layout/item_crops_price"/>
                    <include layout="@layout/item_crops_price"/>
                    <include layout="@layout/item_crops_price"/>
                </LinearLayout>


            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>