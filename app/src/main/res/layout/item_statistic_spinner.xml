<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_margin_default_tiny"
        >
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/line_bottom_active">
        <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/line_bottom_active"
                android:id="@+id/imageView7"
                android:layout_alignBottom="@+id/TextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="6dp"/>
        <com.farmers.underground.ui.custom_views.CustomTextView
                android:id="@+id/TextView"
                style="@style/TV_StatisticsSpinnerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:singleLine="true"
                android:background="@color/opaque"
                android:gravity="left"
                android:layout_marginBottom="-4dp"
                android:layout_marginLeft="@dimen/padding_margin_default_small"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_alignParentTop="true"
                custom:customFont="bold"
                android:text="some tezr"
               />
            <View
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/TextView"
                    android:layout_alignRight="@+id/TextView" android:alpha="0.7"
                    android:layout_alignLeft="@+id/TextView" android:layout_alignStart="@+id/TextView"/>
    </RelativeLayout>



</FrameLayout>