<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/llPeriod">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/period_picker_choose"
            android:gravity="center_horizontal"
            android:textSize="@dimen/period_picker_date_text_size"
            style="@style/WhiteRegularText"
            android:drawableLeft="@drawable/ic_arrow_drop_down_3_copy"
            android:id="@+id/tvPeriodFrom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider_height"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_picker_to"
            android:textSize="@dimen/period_picker_text_to_size"
            style="@style/WhiteRegularText"
            android:layout_marginTop="@dimen/margin_default_large"
            android:layout_marginBottom="@dimen/margin_default_large"
            android:id="@+id/textView12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/period_picker_choose"
            android:textSize="@dimen/period_picker_date_text_size"
            style="@style/WhiteRegularText"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_arrow_drop_down_3_copy"
            android:id="@+id/tvPeriodTo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider_height"
            android:background="@color/white"/>

    </LinearLayout>

    <com.farmers.underground.ui.custom_views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WhiteRegularText"
        android:text="All Time"
        android:textSize="@dimen/period_picker_date_text_size"
        android:layout_marginTop="30dp"
        android:id="@+id/tvAllTime"
        android:layout_below="@+id/llPeriod"
        android:layout_centerHorizontal="true" />

</LinearLayout>