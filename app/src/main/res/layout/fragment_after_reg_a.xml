<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/login_fragment_padding"
    android:background="@drawable/bg_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llStart">

        <com.farmers.underground.ui.custom_views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/after_sign_header"
            android:textSize="@dimen/after_sign_header_text_size"
            android:layout_marginBottom="@dimen/after_sign_header_margin_bottom"
            android:layout_marginTop="@dimen/after_sign_header_margin_top"
            android:id="@+id/textView2"
            custom:customFont="regular"  />

        <com.farmers.underground.ui.custom_views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/after_sign_text"
            android:textScaleX="1.1"
            android:layout_marginLeft="@dimen/login_fragment_padding"
            android:layout_marginRight="@dimen/login_fragment_padding"
            android:gravity="center"
            android:id="@+id/textView5"
            style="@style/WhiteMainRegularText"  />

        <com.farmers.underground.ui.custom_views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_marketeer_name_height"
            android:layout_marginTop="@dimen/after_sign_enter_marketeer_margin_top"
            android:layout_marginRight="@dimen/login_fragment_padding"
            android:layout_marginLeft="@dimen/login_fragment_padding"
            android:text="@string/after_sign_enter_marketeer"
            android:gravity="right|center_vertical"
            android:id="@+id/tvEnterMarketeer"
            style="@style/WhiteMainRegularText"  />

        <View
            android:layout_marginLeft="@dimen/login_fragment_padding"
            android:layout_marginRight="@dimen/login_fragment_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_divider_height"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/login_fragment_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llStart"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            style="@style/ButtonSignScreens"
            android:layout_marginBottom="@dimen/after_sign_margin_start_skip"
            android:background="@color/bg_btn_login"
            android:id="@+id/btnStart">

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteMainRegularText"
                android:text="@string/after_sign_start"
                android:id="@+id/tvLetsGo" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:text="@string/after_sign_skip"
                android:id="@+id/tvSkip"
                android:layout_gravity="bottom"
                style="@style/ButtonAqua" />

            <com.farmers.underground.ui.custom_views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/after_sign_propose_skip"
                android:id="@+id/textView9"
                style="@style/WhiteNormalRegularText"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>