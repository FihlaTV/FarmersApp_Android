<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/aqua"
    android:fitsSystemWindows="true">

    <Spinner
        android:id="@+id/spinner_TB"
        style="@style/spinner_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="left"
        android:visibility="gone" />

    <com.farmers.underground.ui.custom_views.CustomSearchView
        custom:searchHintIcon="@null"
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="gone" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/action_calendar"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_gravity="left"
        android:clickable="true"
        android:src="@drawable/ic_toolbar_calendar"
        android:visibility="gone" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/action_done"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_gravity="left"
        android:clickable="true"
        android:src="@drawable/ic_done_noactive"
        android:visibility="gone" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/action_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:src="@null"
        android:visibility="gone" />

    <com.farmers.underground.ui.custom_views.CustomTextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="top"
        android:paddingBottom="@dimen/padding_margin_default_tiny"
        android:singleLine="true"
        android:paddingLeft="4dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="@dimen/toolbar_text_size"
        custom:customFont="bold" />



</android.support.v7.widget.Toolbar>