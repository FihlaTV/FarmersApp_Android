<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageView4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/ic_crop_marketer_price"/>

        <TextView
                android:id="@+id/tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="4.50"
                android:textColor="@color/text_dark_grey"
                android:textSize="34sp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_Marketeer_CropItem"
            style="@style/TV_Small_CropsItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="גידולים חיפוש"
            android:textColor="@color/text_light_grey"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/tv_PriceDate_CropItem"
            style="@style/TV_Small_CropsItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="(15.4.11)"
            android:textColor="@color/text_light_grey"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/tv_RefresPrice_CropsItem"
            style="@style/TV_Small_CropsItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clickable="true"
            android:text="@string/tap_to_refresh_price"
            android:textColor="@color/selector_tap_to_refresh"
            android:textSize="10sp"/>

</LinearLayout>