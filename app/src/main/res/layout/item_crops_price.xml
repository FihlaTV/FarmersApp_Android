<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_above="@+id/tv_PriceDate_CropItem"
            android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal" android:layout_weight="3">
        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_crop_marketer_price" android:scaleType="fitXY"
                android:layout_gravity="bottom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.50"
                android:id="@+id/tv_Price"
                android:textColor="@color/text_dark_grey"
                android:layout_gravity="bottom"
                android:textSize="22sp"/>
    </LinearLayout>
    <TextView
            style = "@style/TV_Small_CropsItem"
            android:text="שוק סיטונאי"
            android:textColor="@color/text_light_grey"
            android:id="@+id/tv_Marketeer_CropItem"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"/>
    <TextView
            style = "@style/TV_Small_CropsItem"
            android:text="(15.4.11)"
            android:textColor="@color/text_light_grey"
            android:id="@+id/tv_PriceDate_CropItem"
            android:layout_height="0dp"
            android:layout_weight="1" android:gravity="center_vertical|center_horizontal"/>
    <TextView
            style = "@style/TV_Small_CropsItem"
            android:id="@+id/tv_RefresPrice_CropsItem"
            android:textColor="@color/selector_tap_to_refresh"
            android:clickable="true"
            android:text="@string/tap_to_refresh_price"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical|center_horizontal"/>


</LinearLayout>