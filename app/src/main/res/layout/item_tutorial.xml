<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tutorial_bg_gradient"
        >
    <com.farmers.underground.ui.custom_views.ArialTextView
            android:id="@+id/tv_TutorialTitle"
            style="@style/TV_Tutorial_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tutorial_title_top_margin"
            android:layout_marginLeft="@dimen/tutorial_title_side_margin"
            android:text="TITLE"
            android:textColor="@color/selector_tutorial_title"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxWidth="@dimen/tutorial_max_width"
            android:paddingRight="@dimen/tutorial_content_side_padding"
            android:paddingLeft="@dimen/tutorial_content_side_padding"
            android:layout_below="@+id/tv_TutorialTitle"
            android:orientation="vertical"
            android:id="@+id/ll_TutorialContentContainer">
        <com.farmers.underground.ui.custom_views.ArialTextView
                android:id="@+id/tv_TutorialText"
                style="@style/TV_Tutorial_Content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CONTENT"
                android:gravity="center_vertical|center_horizontal"
                />

        <ImageView
                android:id="@+id/iv_TutorialItemBG"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:clickable="true"
                android:scaleType="fitXY"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fl_TutorialNext"
            android:layout_height="@dimen/tutorial_next_btn_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_tutorial_next_bg"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tutorial_next_btn_height"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
            <ImageView
                    android:layout_width="@dimen/tutorial_arrow_size"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:src="@drawable/forward"
                    android:layout_gravity="center_horizontal"/>
            <com.farmers.underground.ui.custom_views.ArialTextView
                    android:id="@+id/tv_TutorialNext"
                    style="@style/TV_Tutorial_Content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/text_white"
                    android:text="@string/tutorial_next"
                    android:padding="8dp"
                    />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>