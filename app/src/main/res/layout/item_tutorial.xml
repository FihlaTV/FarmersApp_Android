<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tutorial_bg"
            >
        <TextView
                android:id="@+id/tv_TutorialTitle"
                style="@style/TV_Tutorial_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tutorial_title_top_margin"
                android:layout_marginLeft="@dimen/tutorial_title_side_margin"
                android:text="TITLE"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="@dimen/tutorial_max_width"
                android:paddingRight="@dimen/tutorial_content_side_padding"
                android:paddingLeft="@dimen/tutorial_content_side_padding"
                android:layout_below="@+id/tv_TutorialTitle"
                android:orientation="vertical"
                >
            <TextView
                    android:id="@+id/tv_TutorialText"
                    style="@style/TV_Tutorial_Content"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="CONTENT" android:gravity="center_vertical|center_horizontal"
                    />

            <ImageView
                    android:id="@+id/iv_TutorialItemBG"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:clickable="true"
                    android:scaleType="fitXY"/>
        </LinearLayout>
    </RelativeLayout>