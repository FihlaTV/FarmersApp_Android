<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/crop_price_icon_size"
                android:layout_height="@dimen/crop_price_icon_size"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/ic_crop_marketer_price" android:layout_marginBottom="6dp"/>

        <com.farmers.underground.ui.custom_views.CustomTextView
                android:id="@+id/tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.50"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/all_prices_price_text_size"
            custom:customFont="roboto_light"/>
    </LinearLayout>

        <com.farmers.underground.ui.custom_views.CustomTextView
            android:id="@+id/tv_Marketeer_CropItem"
            style="@style/TV_Small_CropsItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="גידולים חיפוש"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/crop_price_name_marketer_text_size"
            custom:customFont="regular"/>

    <com.farmers.underground.ui.custom_views.CustomTextView
            android:id="@+id/tv_RefresPrice_CropsItem"
            style="@style/TV_Small_CropsItem"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:clickable="true"
            android:text="@string/all_prices_more_price"
            android:textColor="@color/selector_tap_to_refresh"
            android:textSize="@dimen/crop_price_refresh_text_size"
            custom:customFont="regular"/>

</LinearLayout>